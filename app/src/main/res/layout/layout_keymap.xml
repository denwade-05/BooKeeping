<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="281dp"
    android:background="@color/gray_qian">
    <View
        android:layout_width="match_parent"
        android:background="@color/gray_dan"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pre1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注:"
                />
        </LinearLayout>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:layout_height="25dp"
            android:textSize="16sp"
            android:hint="点击写备注" />
        <TextView
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="26sp"
            android:text="0.00"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray_dan"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kb_tv_1"
            style="@style/keyboard_text_style"
            android:layout_height="@dimen/dp_59"
            android:text="1" />

        <!--<view
             android:layout_width="1dp"
             android:layout_height="59dp"
             android:background="#D0D0D0"/>-->
        <!--<View style="@style/keyboard_ver_line" />-->

        <TextView
            android:id="@+id/kb_tv_2"
            style="@style/keyboard_text_style"
            android:text="2" />

        <!--<view
            android:layout_width="1dp"
            android:layout_height="59dp"
            android:background="@color/gray_dan"/>-->

        <TextView
            android:id="@+id/kb_tv_3"
            style="@style/keyboard_text_style"
            android:text="3" />
        <!--<view
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_59"
            android:background="@color/gray_dan"/>-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_59"
            android:layout_weight="1">
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/gray_dan"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kb_tv_4"
            style="@style/keyboard_text_style"
            android:text="4" />

        <!--<view
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_59"
            android:background="@color/gray_dan"/>-->

        <TextView
            android:id="@+id/kb_tv_5"
            style="@style/keyboard_text_style"
            android:text="5" />

        <!--<view
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_59"
            android:background="@color/gray_dan"/>-->

        <TextView
            android:id="@+id/kb_tv_6"
            style="@style/keyboard_text_style"
            android:text="6" />
        <!--<view
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_59"
            android:background="@color/gray_dan"/>-->
        <TextView
            android:id="@+id/kb_tv_add"
            style="@style/keyboard_text_style"
            android:text="+" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/gray_dan"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kb_tv_7"
            style="@style/keyboard_text_style"
            android:text="7" />

       <!-- <view
            android:layout_width="1dp"
            android:layout_height="59dp"
            android:background="@color/gray_dan"/>-->

        <TextView
            android:id="@+id/kb_tv_8"
            style="@style/keyboard_text_style"
            android:text="8" />

        <!--<view
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_59"
            android:background="@color/gray_dan"/>-->

        <TextView
            android:id="@+id/kb_tv_9"
            style="@style/keyboard_text_style"
            android:text="9" />
        <!--<view
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_59"
            android:background="@color/gray_dan"/>-->
        <TextView
            android:id="@+id/kb_tv_sub"
            style="@style/keyboard_text_style"
            android:text="-" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/gray_dan"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:orientation="horizontal">

        <TextView
            style="@style/keyboard_text_style"
            android:text="." />

       <!-- <view
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_59"
            android:background="@color/gray_dan"/>-->

        <TextView
            android:id="@+id/kb_tv_0"
            style="@style/keyboard_text_style"
            android:text="0" />

       <!-- <view
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_59"
            android:background="@color/gray_dan"/>
-->
        <TextView
            android:id="@+id/kb_tv_del"
            style="@style/keyboard_text_style"
            android:text="删除"
            android:textSize="20sp" />
       <!-- <view
            android:layout_width="1dp"
            android:layout_height="@dimen/dp_59"
            android:background="@color/gray_dan"/>-->
        <TextView
            android:id="@+id/kb_tv_done"
            style="@style/keyboard_text_style"
            android:text="完成" />

    </LinearLayout>
</LinearLayout>